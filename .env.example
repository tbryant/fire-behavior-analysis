# ArcGIS Configuration
# Copy this file to .env and fill in your credentials
# NEVER commit the .env file to version control!

# ArcGIS Online or Enterprise Portal
ARCGIS_URL=https://www.arcgis.com
ARCGIS_USERNAME=your_username_here
ARCGIS_PASSWORD=your_password_here

# Optional: Use API key instead of username/password
# ARCGIS_API_KEY=your_api_key_here

# Optional: Specific portal URL for ArcGIS Enterprise
# ARCGIS_PORTAL_URL=https://your-portal.domain.com/portal

# Project Settings
PROJECT_NAME=Fire Analysis Project
DEFAULT_OUTPUT_DIR=outputs
DEFAULT_DATA_DIR=data

# LANDFIRE Settings
LANDFIRE_VERSION=LF2020
LANDFIRE_REGION=US  # or specific state code like CA, OR, WA

# Fire Behavior Defaults
DEFAULT_FUEL_MOISTURE=8
DEFAULT_TEMPERATURE=75
DEFAULT_HUMIDITY=40
DEFAULT_WIND_SPEED=10
